<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- LaunchActivity -->
    
    <style name="launchActivityTitle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- MainScreen text styles -->

    <style name="textMainScreenTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="textMainScreenRemark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>


    <!-- Detail screen styels -->

    <style name="detailScreen" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="detailScreen.Title" parent="detailScreen">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="detailScreen.Regular" parent="detailScreen">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>