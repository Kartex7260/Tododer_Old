<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glare gradient stroke -->
    <item
        android:height="20dp" >
        <shape
            android:shape="rectangle" >
            <gradient
                android:startColor="#ccffffff"
                android:endColor="#00ffffff"
                android:angle="-90" />
            <corners android:radius="2.0dp" />
        </shape>
    </item>

    <!-- Shadow gradient stroke -->
    <item>
        <shape
            android:shape="rectangle" >
            <gradient
                android:startColor="#0A000000"
                android:endColor="#00000000"
                android:angle="90"/>
            <corners android:radius="2.0dp" />
        </shape>
    </item>

    <!-- Main panel -->
    <item
        android:right="0.5dp"
        android:top="0.5dp"
        android:bottom="0.5dp"
        android:left="0.5dp">

        <shape
            android:shape="rectangle">
            <solid android:color="?attr/backgroundColor" />
            <corners android:radius="2.0dp" />
        </shape>
    </item>

</layer-list>